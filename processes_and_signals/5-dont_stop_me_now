#!/usr/bin/env bash
#This is a script that stops 4-to_infinity_and_beyond process
# You must use kill

# Find the PID of the "4-to_infinity_and_beyond" process
PID=$(pgrep 4-to_infinity_and_beyond)

# Check if the process is running
if [ -z "$PID" ]; then
  echo "Process is not running."
  exit 1
fi

# Send SIGTERM signal to the process to gracefully stop it
kill -TERM "$PID"

# Wait for the process to exit
while kill -0 "$PID" 2>/dev/null; do
  sleep 1
done

echo "Process has been stopped."

